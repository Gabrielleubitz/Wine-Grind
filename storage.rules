rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow read access to all files
      allow read;
      
      // Allow write access to authenticated users in their own folder
      match /speaker_files/{eventId}/{userId}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow profile picture uploads for authenticated users
      match /profile-pictures/{userId}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}